upstream antibioticsrct-staging {
    server unix:/tmp/gunicorn-antibioticsrct-staging.sock fail_timeout=0;
    keepalive 60;
}

server {
    listen 80;
    listen [::]:80;
    server_name staging.op2.org.uk;

    resolver 1.1.1.1 8.8.4.4 valid=300s;
    resolver_timeout 5s;

    access_log /webapps/openprescribing/logs/antibioticsrct-staging-access.log;
    error_log /webapps/openprescribing/logs/antibioticsrct-staging-error.log;

    client_max_body_size 200M;

    rewrite ^/$ http://staging.openprescribing.net/$1 redirect;

    location / {
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header Host $http_host;

        proxy_pass http://antibioticsrct-staging;
    }

    location /static {
        alias   /var/www/antibioticsrct-staging/antibiotics-rct/antibioticsrct/collected_static/;
        expires max;
        access_log off;
    }
}

upstream nimodipine {
    server unix:/tmp/gunicorn-nimodipine.sock fail_timeout=0;
    keepalive 60;
}

server {
    listen 80;
    listen [::]:80;
    server_name op2.org.uk www.op2.org.uk;

    resolver 1.1.1.1 8.8.4.4 valid=300s;
    resolver_timeout 5s;

    access_log /webapps/openprescribing/logs/nimodipine-access.log;
    error_log /webapps/openprescribing/logs/nimodipine-error.log;

    client_max_body_size 200M;

    rewrite ^/$ https://openprescribing.net/$1 redirect;

    location / {
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header Host $http_host;

        proxy_pass http://nimodipine;
    }

    location /static {
        alias   /var/www/nimodipine/nimodipine-rct/nimodipine-webapp/collected_static/;
        expires max;
        access_log off;
    }
}
